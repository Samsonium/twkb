{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "types",
    "composite": true,
    "baseUrl": ".",
    "types": [
      "node"
    ]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "test"]
}
