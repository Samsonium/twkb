{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationDir": "types",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "$src/*": ["./src/*"]
    },
    "types": [
      "node"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
